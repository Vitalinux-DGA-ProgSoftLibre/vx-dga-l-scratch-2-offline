#!/bin/sh
# postinst script for vx-dga-l-scratch-2-offline
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
is_fresh_install()
{
        if [ -z "$2" ] ; then
                return 0
        fi
        return 1
}


case "$1" in
    configure)
    if ! is_fresh_install $@ ; then
        # Si no es la primera instalación puede ser que el usuario ya tenga el scratch instalado.
        # Si lo tiene, se debería actualizar el mismo en el caso de estar instalado. Comprobar antes si hay entorno gráfico
        # No es necesario instalar toda la historieta de AdobeInstaler
        USUARIO="$(vx-usuario-grafico)"
        if [ "" != "$USUARIO" ] && [ -d '/opt'/'Scratch 2'/ ]; then
        	cd /tmp
        	wget -c "https://scratch.mit.edu/scratchr2/static/sa/Scratch-456.0.4.air"
        	'Adobe AIR Application Installer' /tmp/Scratch-456.0.4.air
        fi

    fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
